package hello;
import java.util.Scanner;
public class constructor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
            Scanner s=new Scanner(System.in);
            int p,t,r;
            float si;
            p=s.nextInt();
            t=s.nextInt();
            r=s.nextInt();
            si=(p*t*r)/100;
            System.out.println(si);
	}
}
